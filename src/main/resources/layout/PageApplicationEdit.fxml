<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootElement" prefHeight="550.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.softweb.desktop.controllers.edit.ApplicationEditController">
    <stylesheets>
        <URL value="@../css/PageApplicationsLayout.css" />
        <URL value="@../css/ApplicationLayout.css" />
      <URL value="@../css/PageApplicationEdit.css" />
    </stylesheets>
   <left>
      <BorderPane maxHeight="400.0" minHeight="400.0" prefHeight="400.0" prefWidth="200.0" style="-fx-border-color: #075d5b; -fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #fff;" BorderPane.alignment="CENTER">
         <top>
            <Label fx:id="tbMenuLabel" text="Меню" textFill="#075d5b" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="50.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" maxHeight="300.0" minHeight="300.0" prefHeight="300.0" prefWidth="100.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Label fx:id="labelMain" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#openMain" styleClass="menu-items" text="Основное" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="20.0" top="50.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="labelImages" alignment="CENTER" onMouseClicked="#openImages" styleClass="menu-items" text="Изображения" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="labelInstaller" alignment="CENTER" onMouseClicked="#openInstaller" styleClass="menu-items" text="Установщик" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="labelAdditional" onMouseClicked="#openAdditional" styleClass="menu-items" text="Дополнительно" />
               </children>
               <BorderPane.margin>
                  <Insets left="5.0" top="5.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
      </BorderPane>
   </left>
   <center>

   </center>
</BorderPane>
